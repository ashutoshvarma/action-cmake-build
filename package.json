{
  "name": "action-cmake-build",
  "version": "0.0.1",
  "private": true,
  "description": "Github action to Build & Test CMake projects",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "dry": "node --experimental-modules bootstrap.mjs",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashutoshvarma/action-cmake-build.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "cmake"
  ],
  "author": "Ashutosh Varma",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^16.4.3",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.14.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.7",
    "yaml": "^1.10.0"
  }
}
